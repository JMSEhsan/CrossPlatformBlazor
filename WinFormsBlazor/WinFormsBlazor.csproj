  <ItemGroup>
    <ProjectReference Include="..\RazorClassLibrary\RazorClassLibrary.csproj" />
  </ItemGroup>

  <ItemGroup>
	 <Content Update="wwwroot\**">
		 <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	 </Content>
  </ItemGroup>

</Project>